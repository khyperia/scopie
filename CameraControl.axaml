<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scopie="clr-namespace:Scopie"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Scopie.CameraControl">
    <Design.DataContext>
        <scopie:Camera />
    </Design.DataContext>
    <StackPanel>
        <Button Click="ScanCameras">Scan cameras</Button>
        <Label Content="{Binding Asdf}"></Label>
        <ListBox ItemsSource="{Binding Cameras}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Id}"></Label>
                        <Label Content="{Binding Model}"></Label>
                        <Button Click="SelectCamera"></Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Image Source="{Binding Bitmap}"></Image>
    </StackPanel>
</UserControl>